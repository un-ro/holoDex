<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_talent_avatar"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/lbl_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_profile"
            android:layout_marginTop="8dp"
            android:textStyle="italic"
            style="@style/TextAppearance.Material3.TitleLarge"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:layout_marginBottom="8dp" >
            <TableRow>
                <TextView
                    android:text="@string/label_debut"
                    style="@style/TextAppearance.Material3.BodyMedium"/>
                <TextView
                    android:id="@+id/tv_talent_debut"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:gravity="end"
                    tools:text="2023" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/label_birthdate"
                    style="@style/TextAppearance.Material3.BodyMedium" />
                <TextView
                    android:id="@+id/tv_talent_birthdate"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:gravity="end"
                    tools:text="2023" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/label_group"
                    style="@style/TextAppearance.Material3.BodyMedium" />
                <TextView
                    android:id="@+id/tv_talent_group"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:gravity="end"
                    tools:text="[EN] - HoloMyth" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_description"
            android:layout_marginTop="8dp"
            android:textStyle="italic"
            style="@style/TextAppearance.Material3.TitleLarge"/>

        <TextView
            android:id="@+id/tv_talent_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.Material3.BodyMedium"
            tools:text="@string/desc_ame"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:textColor="#EFE2E2"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="@string/lbl_btn_youtube" />

    </LinearLayout>

</ScrollView>