<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.unero.holodex.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/actionHomeToDetail"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/actionHomeToAbout"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="dev.unero.holodex.ui.detail.DetailFragment"
        android:label="@string/label_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="talent"
            app:argType="dev.unero.holodex.data.Talent" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="dev.unero.holodex.ui.about.AboutFragment"
        android:label="@string/label_about"
        tools:layout="@layout/fragment_about" />
</navigation>